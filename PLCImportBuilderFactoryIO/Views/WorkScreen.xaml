<Window x:Class="PLCImportBuilderFactoryIO.Views.WorkScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLCImportBuilderFactoryIO.Views"
        mc:Ignorable="d"
        Background="Beige"
        WindowState="Maximized"
        Title="Signale" Height="850" Width="1500">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Margin="5"
                  MinHeight="150"
                  BorderBrush="Black" BorderThickness="2"
                  Header="{Binding SelectedTargetSystem,
                           UpdateSourceTrigger=PropertyChanged,
                            Mode=TwoWay}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0"
                       Content="Pfad FactoryIO-Datei:"/>
                <TextBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"
                         Text="{Binding PathFactoryIOFile,
                                UpdateSourceTrigger=PropertyChanged,
                                Mode=TwoWay}"/>
                <Button Grid.Column="3" Grid.Row="0"
                        Content="Öffnen"
                        Command="{Binding OpenFileDialogFactoryIOFile}"/>
                <Label Grid.Column="0" Grid.Row="1"
                       Content="Pfad Export-Datei:"/>
                <TextBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"
                         Text="{Binding PathExportFile,
                         UpdateSourceTrigger=PropertyChanged,
                         Mode=TwoWay}"/>
                <Button Grid.Column="3" Grid.Row="1"
                        Content="Öffnen"
                        Command="{Binding OpenFolderDialogExportFile}"/>
                <Label Grid.Column="0" Grid.Row="2"
                       Content="Export-Format:"/>
                <ComboBox Grid.Column="1" Grid.Row="2" Margin="5"
                          MinWidth="300"
                          FontSize="18" FontWeight="Bold"
                          BorderBrush="Black" BorderThickness="2"
                          HorizontalAlignment="Left"
                          VerticalContentAlignment="Center"
                          ItemsSource="{Binding ExportFormats,
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}"
                          SelectedIndex="{Binding SelectedExportFormat,
                                          UpdateSourceTrigger=PropertyChanged,
                                          Mode=TwoWay}"/>
                <CheckBox Grid.Column="2" Grid.Row="2" Margin="5"
                          FontSize="18" FontWeight="Bold"
                          BorderBrush="Black" BorderThickness="2"
                          VerticalContentAlignment="Center"
                          Content="Signalmapping"
                          IsChecked="{Binding SignalMappingActivated,
                                      UpdateSourceTrigger=PropertyChanged,
                                      Mode=TwoWay}"
                          Visibility="{Binding VisibilitySignalMapping,
                                       UpdateSourceTrigger=PropertyChanged,
                                       Mode=TwoWay}"/>
                <Label Grid.Column="0" Grid.Row="3"
                       Content="Übertragungsart:"/>
                <ComboBox Grid.Column="1" Grid.Row="3" Margin="5"
                          MinWidth="300"
                          FontSize="18" FontWeight="Bold"
                          BorderBrush="Black" BorderThickness="2"
                          HorizontalAlignment="Left"
                          ItemsSource="{Binding ModeOfConnection,
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}"
                          SelectedIndex="{Binding SelectedModeOfConnection,
                                          UpdateSourceTrigger=PropertyChanged,
                                          Mode=TwoWay}"/>
                <Button Grid.Column="3" Grid.Row="3"
                        Content="Schreiben"
                        Command="{Binding CreateExportFile}"/>
            </Grid>
        </GroupBox>
        <TabControl Grid.Row="1" Margin="5"
                    TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Background" Value="Beige"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="Black"
                                        BorderThickness="2"
                                        Padding="{TemplateBinding Padding}"
                                        Margin="{TemplateBinding Margin}">
                                    <ContentPresenter x:Name="HeaderContent"
                                                      ContentSource="Header"
                                                      RecognizesAccessKey="True"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="LightGreen"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Panel.ZIndex" Value="1"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=Foreground}"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Digitale Eingänge">
                <DataGrid ItemsSource="{Binding DigitalInputs,
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="FactoryIO-Signal" Width="*"
                                            IsReadOnly="True"
                                            Binding="{Binding SignalName,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Variablensignalen Zielsystem" Width="*"
                                            Binding="{Binding VariableNameInControlsystem,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Kommentar" Width="*"
                                            Binding="{Binding CommentInControlsystem,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Digitale Ausgänge">
                <DataGrid ItemsSource="{Binding DigitalOutputs,
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="FactoryIO-Signal" Width="*"
                                            IsReadOnly="True"
                                            Binding="{Binding SignalName,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Variablensignalen Zielsystem" Width="*"
                                            Binding="{Binding VariableNameInControlsystem,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Kommentar" Width="*"
                                            Binding="{Binding CommentInControlsystem,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Analoge Eingänge">
                <DataGrid ItemsSource="{Binding AnalogInputs,
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="FactoryIO-Signal" Width="*"
                                            IsReadOnly="True"
                                            Binding="{Binding SignalName,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Variablensignalen Zielsystem" Width="*"
                                            Binding="{Binding VariableNameInControlsystem,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Kommentar" Width="*"
                                            Binding="{Binding CommentInControlsystem,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Analoge Ausgänge">
                <DataGrid ItemsSource="{Binding AnalogOutputs,
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="FactoryIO-Signal" Width="*"
                                            IsReadOnly="True"
                                            Binding="{Binding SignalName,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Variablensignalen Zielsystem" Width="*"
                                            Binding="{Binding VariableNameInControlsystem,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Kommentar" Width="*"
                                            Binding="{Binding CommentInControlsystem,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
